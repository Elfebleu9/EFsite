{% extends 'layouts/base3.html.twig' %}

{% block title 'Connexion' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="h3 mb-5 mt-5 font-weight-normal">Je me connecte</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger text-center" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label class="mt-3" for="pseudo">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="pseudo" id="pseudo" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <label class="mt-3" for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mt-3 mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Je me souviens
                </label>
            </div>
        

            <button class="btn btn-lg btn-block btn-primary mt-4 mb-3" type="submit">
                Connexion
            </button>
        </form>
    </div>
</div>
{% endblock %}
