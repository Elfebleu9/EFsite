{% extends 'layouts/base3.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-5 mt-5 font-weight-normal">Je me connecte</h1>
    <label class="mt-3" for="pseudo">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="pseudo" id="pseudo" class="form-control" required autofocus>
    <label class="mt-3" for="password">Mot de passe</label>
    <input type="password" name="password" id="password" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary mt-4 mb-3" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
